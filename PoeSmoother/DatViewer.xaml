<UserControl x:Class="PoeSmoother.DatViewer"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Properties="clr-namespace:PoeSmoother.Properties"
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300">
	<Grid>        
        <Grid.RowDefinitions>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="dataGridEntries" AutoGenerateColumns="False" MouseRightButtonDown="dataGridEntries_MouseRightButtonDown"  Background="{x:Null}"
                  MouseMove="dataGridEntries_MouseMove" IsReadOnly="True" MouseLeave="dataGridEntries_MouseMove"  />
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Height="4" />
		<DataGrid Grid.Row="2" Name="dataGridData" AutoGenerateColumns="True" ItemsSource="{Binding DataStrings}"  />
		<StackPanel Grid.Row="3" HorizontalAlignment="Center" Orientation="Horizontal">
			<!--Button Margin="5 0 5 0" Name="buttonSave" Click="buttonSave_Click_1" Content="{x:Static Properties:Resources.DatViewer_Button_Save}" /-->
            <Button Margin="5 0 5 0" Name="buttonExportCSV" Click="buttonExportCSV_Click_1" Content="{x:Static Properties:Resources.DatViewer_Button_ExportCSV}"/>
            <!--Button Margin="5 0 5 0" Name="buttonExportWiki" Click="buttonExportWiki_Click_1" Content="{x:Static Properties:Resources.DatViewer_Button_ExportWiki}"/-->
        </StackPanel>
	</Grid>
</UserControl>
